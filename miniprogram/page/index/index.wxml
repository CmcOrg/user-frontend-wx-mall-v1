<view class="flex-c vwh100 black2-bc">

    <view style="height: {{statusBarHeight}};"></view>

    <view class="w100 flex-center rel" style="height: {{menuButtonHeight}};">
        <view class="abs" style="left: {{menuButtonMarginRight}}px;">
            <view class="rel">
                <t-button t-class="shadow pink1-bc f-9 black1 fw-600" variant="text" shape="circle" size="small"
                          bind:tap="openPopup">
                    我的
                </t-button>
            </view>
        </view>
        <view class="f-13 fw-600">
            见茶思念奶茶店
        </view>
    </view>

    <view class="flex-1 wh100 rel">
        <view class="w100 abs" style="top: 0px;">
            <t-notice-bar visible marquee="{{marquee}}" prefixIcon="sound" t-class="transparent-bc black1"
                          content="欢迎光临">
            </t-notice-bar>
        </view>
        <view class="flex-center wh100 abs">
            <view class="m-b-35 rel">
                <t-button t-class="p-l-r-50 p-t-b-58 shadow f-13 fw-600 pink1-bc" variant="text"
                          bind:tap="cardClick">
                    堂食
                </t-button>
                <t-button t-class="m-l-30 p-l-r-50 p-t-b-58 shadow f-13 fw-600 pink1-bc" variant="text"
                          bind:tap="cardClick">
                    外卖
                </t-button>
            </view>
        </view>
    </view>

    <t-popup visible="{{popupVisible}}" bind:visible-change="onPopupVisibleChange" placement="left">
        <view class="white1-bc flex-c rel black2-bc" style="width: 75vw; height: 100vh">

            <view style="height: {{statusBarHeight}};"></view>

            <view class="flex-c flex1 m-t-20 rel">
                <view>
                    <view class="flex-center">
                        <t-avatar
                                bind:tap="accountClick"
                                t-class="pink1-bc shadow black1"
                                size="large"
                                icon="user">
                        </t-avatar>
                    </view>
                    <view class="flex-center m-t-14 f-12 fw-600">
                        <view bind:tap="accountClick">{{userSelfInfoVO.nickname}}</view>
                    </view>
                </view>

                <view class="m-t-30 m-l-r-10 b-r-4">
                    <t-cell t-class="f-12 p-t-b-14" note="全部订单" hover arrow bordered="{{false}}"
                            bind:tap="goMyOrderClick">
                        <view class="f-13 fw-600" slot="title">
                            我的订单
                        </view>
                    </t-cell>
                    <view class="white1-bc flex-center black3">
                        <view wx:for="{{orderCardList}}" wx:key="title"
                              class="p-t-b-12 flex1 flex-center"
                              hover-class="black4-bc" hover-stay-time="70">
                            <view class="f-13 fw-600">
                                <t-icon prefix="wr" name="{{item.icon}}" class="f-23"></t-icon>
                                <view class="f-11">{{item.title}}</view>
                            </view>
                        </view>
                    </view>
                </view>

            </view>
        </view>
    </t-popup>

</view>
