<view class="flex vwh100">
    <t-side-bar value="{{sideBarIndex}}" bind:change="onSideBarChange">
        <t-side-bar-item wx:for="{{productList}}" wx:key="index" value="{{index}}"
                         label="{{item.name}}"/>
    </t-side-bar>
    <scroll-view class="flex1" scroll-y scroll-with-animation scroll-top="{{scrollTop}}" bind:scroll="onScroll">
        <view class="p-l-r-16 p-b-200">
            <view wx:for="{{productList}}" wx:key="index">
                <view class="p-t-b-20">
                    <view class="fw-600 f-18">{{item.name}}</view>
                    <view class="p-t-8 black5 f-13">{{item.name}}</view>
                </view>
                <view class="productItem flex-c" wx:for="{{item.takeawaySpuDOList}}" wx:key="subIndex"
                      wx:for-item="subItem"
                      wx:for-index="subIndex">
                    <view>{{subItem.name}}</view>
                </view>
            </view>
        </view>
    </scroll-view>
</view>
